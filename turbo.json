{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env"],
  "globalEnv": [
    "NODE_ENV",
    "DATABASE_URL",
    "NEXT_PUBLIC_BASE_URL",
    "NEXT_PUBLIC_API_HOST"
  ],
  "tasks": {
    "dev": {
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {},
    "test": {},
    "test:e2e": {},
    "db:check": {},
    "db:generate": {},
    "db:migrate": {},
    "db:push": {},
    "db:seed": {}
  }
}
